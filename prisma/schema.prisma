// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  engineType    = "client"
  runtime       = "bun"
}

datasource db {
  provider = "sqlite"
}

model Asset {
  id        String   @id @default(ulid())
  name      String
  type      String
  path      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  data        Data[]
  generations Generation[]

  @@map("assets")
}

model Project {
  id           String   @id @default(ulid())
  name         String
  coverImageId String?  @map("cover_image_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  categories  Category[]
  data        Data[]
  collections Collection[]
  generations Generation[]

  @@map("projects")
}

model Category {
  id          String   @id @default(ulid())
  name        String
  description String
  imagePrompt String   @map("image_prompt") // JSON { text: string, imageIds: string[] }
  enabled     Boolean  @default(true)
  options     String   // JSON array of strings
  maxCount    Int      @map("max_count")
  withImage   Boolean  @map("with_image") @default(true)
  projectId   String   @map("project_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  data        Data[]
  collections Collection[]

  @@map("categories")
}

model Data {
  id          String   @id @default(ulid())
  name        String
  description String
  option      String?
  imageId     String?  @map("image_id")
  categoryId  String   @map("category_id")
  projectId   String   @map("project_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  project     Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  image       Asset?           @relation(fields: [imageId], references: [id])
  category    Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  generations GenerationData[]
  collections CollectionItem[]

  @@index([option])
  @@map("data")
}

model Collection {
  id          String   @id @default(ulid())
  name        String
  description String?
  prompt      String?
  categoryId  String   @map("category_id")
  projectId   String   @map("project_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  project  Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  category Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  items    CollectionItem[]

  @@map("collections")
}

model CollectionItem {
  collectionId String @map("collection_id")
  dataId       String @map("data_id")

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  data       Data       @relation(fields: [dataId], references: [id], onDelete: Cascade)

  @@id([collectionId, dataId])
  @@map("collection_items")
}

model Generation {
  id           String   @id @default(ulid())
  imageId      String   @map("image_id")
  userPrompt   String?  @map("user_prompt")
  projectId    String   @map("project_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  project    Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  image      Asset            @relation(fields: [imageId], references: [id])
  data       GenerationData[]

  @@map("generations")
}

model GenerationData {
  generationId String @map("generation_id")
  dataId       String @map("data_id")

  generation Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)
  data       Data       @relation(fields: [dataId], references: [id], onDelete: Cascade)

  @@id([generationId, dataId])
  @@map("generation_data")
}

model Setting {
  key   String @id
  value String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}
