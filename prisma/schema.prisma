// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  engineType    = "client"
  runtime       = "bun"
}

datasource db {
  provider = "sqlite"
}

model Asset {
  id        String   @id @default(ulid())
  name      String
  type      String
  path      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  characters  Character[]
  equipments  Equipment[]
  generations Generation[]
  poses       Pose[]
  expressions Expression[]
  data        Data[]

  @@map("assets")
}

model Character {
  id          String   @id @default(ulid())
  name        String
  description String?
  imageId     String   @map("image_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("characters")
}

// Deprecated
model Equipment {
  id          String   @id @default(ulid())
  name        String
  description String
  category    String
  imageId     String   @map("image_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset                 @relation(fields: [imageId], references: [id])
  generations GenerationEquipment[]
  outfits     OutfitEquipment[]

  @@index([category])
  @@map("equipments")
}

model Category {
  id          String   @id @default(ulid())
  name        String
  description String
  imagePrompt String   @map("image_prompt") // JSON { text: string, imageIds: string[] }
  enabled     Boolean  @default(true)
  options     String   // JSON array of strings
  maxCount    Int      @map("max_count")
  withImage   Boolean  @map("with_image") @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  data        Data[]
  collections Collection[]

  @@map("categories")
}

model Data {
  id          String   @id @default(ulid())
  name        String
  description String
  option      String?
  imageId     String?  @map("image_id")
  categoryId  String   @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset?           @relation(fields: [imageId], references: [id])
  category    Category         @relation(fields: [categoryId], references: [id])
  generations GenerationData[]
  collections CollectionItem[]

  @@index([option])
  @@map("data")
}

model Collection {
  id          String   @id @default(ulid())
  name        String
  description String?
  prompt      String?
  categoryId  String   @map("category_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  category Category         @relation(fields: [categoryId], references: [id])
  items    CollectionItem[]

  @@map("collections")
}

model CollectionItem {
  collectionId String @map("collection_id")
  dataId       String @map("data_id")

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  data       Data       @relation(fields: [dataId], references: [id], onDelete: Cascade)

  @@id([collectionId, dataId])
  @@map("collection_items")
}

model Generation {
  id           String   @id @default(ulid())
  characterId  String   @map("character_id")
  imageId      String   @map("image_id")
  userPrompt   String?  @map("user_prompt")
  // Deprecated
  poseId       String?  @map("pose")
  // Deprecated
  expressionId String?  @map("expression")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  character  Character             @relation(fields: [characterId], references: [id])
  image      Asset                 @relation(fields: [imageId], references: [id])
  pose       Pose?                 @relation(fields: [poseId], references: [id])
  expression Expression?           @relation(fields: [expressionId], references: [id])
  equipments GenerationEquipment[]
  data       GenerationData[]

  @@map("generations")
}

model GenerationData {
  generationId String @map("generation_id")
  dataId       String @map("data_id")

  generation Generation @relation(fields: [generationId], references: [id])
  data       Data       @relation(fields: [dataId], references: [id])

  @@id([generationId, dataId])
  @@map("generation_data")
}

model GenerationEquipment {
  generationId String @map("generation_id")
  equipmentId  String @map("equipment_id")

  generation Generation @relation(fields: [generationId], references: [id])
  equipment  Equipment  @relation(fields: [equipmentId], references: [id])

  @@id([generationId, equipmentId])
  @@map("generation_equipments")
}

model Outfit {
  id        String   @id @default(ulid())
  name      String
  prompt    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  equipments OutfitEquipment[]

  @@map("outfits")
}

model OutfitEquipment {
  outfitId    String @map("outfit_id")
  equipmentId String @map("equipment_id")

  outfit    Outfit    @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  equipment Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@id([outfitId, equipmentId])
  @@map("outfit_equipments")
}

model Setting {
  key   String @id
  value String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

// Deprecated
model Pose {
  id        String   @id @default(ulid())
  name      String
  imageId   String   @map("image_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("poses")
}

// Deprecated
model Expression {
  id        String   @id @default(ulid())
  name      String
  imageId   String   @map("image_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("expressions")
}
