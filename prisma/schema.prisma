// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  engineType    = "client"
  runtime       = "bun"
}

datasource db {
  provider = "sqlite"
}

model Asset {
  id        String   @id @default(ulid())
  name      String
  type      String
  path      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  characters  Character[]
  equipments  Equipment[]
  generations Generation[]
  poses       Pose[]
  expressions Expression[]

  @@map("assets")
}

model Character {
  id          String   @id @default(ulid())
  name        String
  description String?
  imageId     String   @map("image_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("characters")
}

model Category {
  id          String   @id @default(ulid())
  name        String   @unique
  description String?

  // Stores the schema definition for this category
  // Example: [{ "key": "category", "type": "select", "options": ["top", "bottom"] }, { "key": "description", "type": "text" }, { "key": "image", "type": "image" }]
  fields      Json

  imagePrompt Json?

  enabled     Boolean  @default(true)
  maxCount    Int      @default(1)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  data        Data[]

  @@map("categories")
}

model Data {
  id          String   @id @default(ulid())

  categoryId  String   @map("category_id")
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  // Stores the actual extracted data matching the Category's `fields` definition
  // Example: { "category": "top", "description": "A red t-shirt", "imageId": "xxxxx" }
  values      Json

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  generations Generation[]

  @@map("data")
}

model Generation {
  id           String   @id @default(ulid())
  characterId  String   @map("character_id")
  imageId      String   @map("image_id")
  userPrompt   String?  @map("user_prompt")

  // Deprecated: Migrated to Data
  poseId       String?  @map("pose")
  expressionId String?  @map("expression")

  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  character  Character             @relation(fields: [characterId], references: [id])
  image      Asset                 @relation(fields: [imageId], references: [id])
  pose       Pose?                 @relation(fields: [poseId], references: [id])
  expression Expression?           @relation(fields: [expressionId], references: [id])
  equipments GenerationEquipment[]
  data       Data[]

  @@map("generations")
}

// Deprecated
model Equipment {
  id          String   @id @default(ulid())
  name        String
  description String
  category    String
  imageId     String   @map("image_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset                 @relation(fields: [imageId], references: [id])
  generations GenerationEquipment[]
  outfits     OutfitEquipment[]

  @@index([category])
  @@map("equipments")
}

// Deprecated
model GenerationEquipment {
  generationId String @map("generation_id")
  equipmentId  String @map("equipment_id")

  generation Generation @relation(fields: [generationId], references: [id])
  equipment  Equipment  @relation(fields: [equipmentId], references: [id])

  @@id([generationId, equipmentId])
  @@map("generation_equipments")
}

model Outfit {
  id        String   @id @default(ulid())
  name      String
  prompt    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  equipments OutfitEquipment[]

  @@map("outfits")
}

model OutfitEquipment {
  outfitId    String @map("outfit_id")
  equipmentId String @map("equipment_id")

  outfit    Outfit    @relation(fields: [outfitId], references: [id], onDelete: Cascade)
  equipment Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@id([outfitId, equipmentId])
  @@map("outfit_equipments")
}

model Setting {
  key   String @id
  value String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

// Deprecated
model Pose {
  id        String   @id @default(ulid())
  name      String
  imageId   String   @map("image_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("poses")
}

// Deprecated
model Expression {
  id        String   @id @default(ulid())
  name      String
  imageId   String   @map("image_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  image       Asset        @relation(fields: [imageId], references: [id])
  generations Generation[]

  @@map("expressions")
}
